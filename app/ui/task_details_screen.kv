<TaskDetailsScreen>:
    name: "task_details"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDTopAppBar:
            title: "Task Details"
            left_action_items: [["arrow-left", lambda x: root.go_back()]]

        MDLabel:
            id: title
            text: "Title"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            id: description
            text: ""
            halign: "left"
            theme_text_color: "Secondary"
            size_hint_y: None
            height: self.texture_size[1]

        MDDivider:

        MDLabel:
            id: priority
            text: ""
            halign: "left"

        MDLabel:
            id: status
            text: ""
            halign: "left"

        MDLabel:
            id: pinned
            text: ""
            halign: "left"

        MDLabel:
            id: category
            text: ""
            halign: "left"

        MDLabel:
            id: deadline
            text: ""
            halign: "left"

        MDDivider:

        MDLabel:
            id: dates
            text: ""
            theme_text_color: "Secondary"
            halign: "left"

        Widget:
            size_hint_y: 0.2

        MDButton:
            text: "Toggle Status"
            on_release: root.toggle_status()
            style: "filled"

        MDButton:
            text: "Pin / Unpin"
            on_release: root.toggle_pin()
            style: "filled"

        MDButton:
            text: "Edit Task"
            on_release: root.edit_task()
            style: "filled"

        MDButton:
            text: "DELETE"
            theme_text_color: "Error"
            on_release: root.delete_task()
            style: "text"
